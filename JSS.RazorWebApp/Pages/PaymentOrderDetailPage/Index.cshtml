@page
@model JSS.RazorWebApp.Pages.PaymentOrderDetailPage.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrderDetail[0].OrderDetailId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDetail[0].OrderId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDetail[0].ProductId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDetail[0].Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDetail[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDetail[0].CreatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDetail[0].UpdatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDetail[0].Amount)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderDetail)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderDetailId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedAt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UpdatedAt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Amount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Order.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.Description)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.OrderDetailId" class="btn btn-warning">Edit</a>
                    <a asp-page="./Details" asp-route-id="@item.OrderDetailId" class="btn btn-info">Details</a>
                    <a asp-page="./Delete" asp-route-id="@item.OrderDetailId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
        @if (Model.CurrentPage > 1)
        {
                <li class="page-item">
                    <a class="page-link" asp-route-pageIndex="@(Model.CurrentPage - 1)" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
        }

        @for (int i = 1; i <= Model.TotalPages; i++)
        {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                    <a class="page-link" asp-route-pageIndex="@i">@i</a>
                </li>
        }

        @if (Model.CurrentPage < Model.TotalPages)
        {
                <li class="page-item">
                    <a class="page-link" asp-route-pageIndex="@(Model.CurrentPage + 1)" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
        }
    </ul>
</nav>